<style>
    #tick-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        #tick {
            animation: spin 2s infinite;
        }

        #banner {
            opacity: 0;
            transition: opacity 1s ease-in-out;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1;
        }

        #banner.show {
            opacity: 1;
        }

        @keyframes move-up {
            0% {
                transform: translateY(0);
            }

            100% {
                transform: translateY(-100%);
            }
        }

        @keyframes spin {
            0% {
                transform: rotate(0);
            }

            98% {
                transform: rotate(360deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }
    .img {
        display: block;
        margin-left: auto;
        margin-right: auto;
        margin-top: 50px;
    }

    .button {
        display: block;
        text-decoration: none;
        color: white;
        background-color: orange;
        padding: 15px 25px;
        margin-left: auto;
        margin-right: auto;
        width: 200px;
        height: auto;
        text-align: center;
        font-size: 35px;
        margin-top: 150px;
    }

    .home {
        display: block;
        text-decoration: none;
        color: white;
        background-color: green;
        padding: 15px 25px;
        margin-left: auto;
        margin-right: auto;
        width: 200px;
        height: auto;
        text-align: center;
        font-size: 35px;
        margin-top: 170px;
    }
</style>
<div id="tick-container">
    <img id="tick" src="/views/user/tick.gif" alt="" width="100" height="100" class="img" />
</div>

<section id="banner">
    <img id="img" src="/views/user/tick.gif" alt="" width="100" height="100" class="img" />
    <h2 style="display: block; margin-left: 42%;">Order Placed Successful!</h2>
    <a href="/order" class="button">Track Order</a>
    <a href="/" class="home">Home</a>
</section>

<script>
    const tickContainer = document.getElementById("tick-container");
    const banner = document.getElementById("banner");

    setTimeout(() => {
        tickContainer.style.animation = "move-up 1s forwards";
        setTimeout(() => {
            banner.classList.add("show");
        }, 1000);
    }, 5000);
</script>